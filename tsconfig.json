{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": false,
        "baseUrl": "./",
        "outDir": "./dist/",
        "lib": ["ES2016", "DOM", "DOM.Iterable"]
    },
    "include": ["src/**/*.ts", "/**/*.js", ".eslintrc.js"],
    "exclude": ["dist", "node_modules", "public"]
}
